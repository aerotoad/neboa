{
  "name": "nebra",
  "version": "0.0.2",
  "description": "Simple noSQL on top of SQLite",
  "author": "Samuel Bazaga",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/aerotoad/nebra/issues"
  },
  "homepage": "https://github.com/aerotoad/nebra#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aerotoad/nebra.git"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup-node --watch --onSuccess=\"node dist/index.js\"",
    "build": "tsup-node",
    "test": "vitest run",
    "test:ui": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "release:test": "commit-and-tag-version",
    "release:full": "npm run build && commit-and-tag-version && npm publish"
  },
  "keywords": [
    "sqlite",
    "nosql",
    "mongo",
    "sqlite3",
    "better-sqlite-3",
    "db",
    "database",
    "storing",
    "easy",
    "simple",
    "wrapper"
  ],
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@vitest/ui": "^0.33.0",
    "commit-and-tag-version": "^11.2.2",
    "vite": "^4.4.7",
    "vitest": "^0.33.0"
  },
  "dependencies": {
    "better-sqlite3": "^8.5.0",
    "bson-objectid": "^2.0.4",
    "knex": "^2.5.1",
    "regex-parser": "^2.2.11"
  }
}
